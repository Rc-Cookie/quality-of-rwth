{
    "manifest_version": 3,
    "name": "Quality of RWTH",
    "version": "1.8.15",
    "description": "Makes RWTH websites more enjoyable",
    "permissions": [
        "*://*.rwth-aachen.de/*",
        "*://*.rwth.video/*",
        "storage",
        "downloads"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.rwth-aachen.de/*",
                "*://*.rwth.video/*"
            ],
            "js": [
                "rwthTools.js"
            ]
        }
    ],
    "background": {
        "service_worker": "server.js"
    },
    "options_ui": {
        "page": "options.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+R",
                "mac": "MacCtrl+R"
            }
        }
    },
    "action": {
        "default_icon": "icons/htwr.png",
        "browser_style": true,
        "default_popup": "popup.html"
    }
}